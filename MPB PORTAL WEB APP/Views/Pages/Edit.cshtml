@model MPB_PORTAL_WEB_APP.ViewModels.PageViewModel
@{
    Layout = "~/Views/Shared/_PortalLayout.cshtml";
    ViewData["Title"] = "Edit Page";
}

<h2>Edit Page</h2>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Title" class="form-label">Page Title</label>
        <input asp-for="Title" class="form-control" required />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="MetaTitle" class="form-label">Meta Title</label>
        <input asp-for="MetaTitle" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="MetaDescription" class="form-label">Meta Description</label>
        <textarea asp-for="MetaDescription" class="form-control"></textarea>
    </div>

    <div class="mb-3">
        <label asp-for="Content" class="form-label">Content</label>
        <textarea asp-for="Content" class="form-control"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
