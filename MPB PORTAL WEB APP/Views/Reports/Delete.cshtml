@model MPB_PORTAL_WEB_APP.Models.Report

@{
    Layout = "~/Views/Shared/_PortalLayout.cshtml";
    ViewData["Title"] = "Delete Report";
}

<h2>Delete Report</h2>
<h3>Are you sure you want to delete this report?</h3>

<div>
    <h4>Title: @Model.Title</h4>
    <p>Date of Report: @Model.DateOfReport.ToString("dd MMM yyyy")</p>
    <p>Submitted By: @Model.Report_Made_By</p>
    <p>Status: @Model.Status</p>
    @if (!string.IsNullOrEmpty(Model.FilePath))
    {
        <p>File: <a href="~/@Model.FilePath" target="_blank">View File</a></p>
    }

    <form asp-action="Delete" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Yes, Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
