@using MPB_PORTAL_WEB_APP.ViewModels;
@model VerifyEmailViewModel;

@{
    ViewData["Title"] = "Verify Email";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow p-4 text-center" style="width: 400px;">
        <h2 class="mb-3">Verify Your Email</h2>
        <p class="text-muted">
            Enter your email below to receive a new verification link.
        </p>

        <form asp-action="ResendVerificationEmail" method="post">
            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email Address</label>
                <input asp-for="Email" type="email" class="form-control" placeholder="Enter your email" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-warning w-100">Resend Verification Email</button>
        </form>

        <p class="mt-3">
            Already verified? <a asp-controller="Account" asp-action="Login" class="text-primary fw-bold">Login here</a>
        </p>

        <div class="text-center mt-3">
            <a asp-controller="Home" asp-action="Index" class="btn btn-link">Back to Home</a>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial.cshtml")
}
