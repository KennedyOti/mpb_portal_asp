@model MPB_PORTAL_WEB_APP.Models.CountyActivity
@{
    Layout = "~/Views/Shared/_PortalLayout.cshtml";
    ViewData["Title"] = "Delete Activity";
}

<h2>Delete Activity</h2>

<h3>Are you sure you want to delete this activity?</h3>
<div>
    <h4>Activity Name: @Model.ActivityName</h4>
    <p>Location: @Model.Location</p>
    <p>Status: @Model.Status</p>
    <form asp-action="DeleteConfirmed" asp-controller="Activities" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Yes, Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
