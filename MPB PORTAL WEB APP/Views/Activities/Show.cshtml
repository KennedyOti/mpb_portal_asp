@model MPB_PORTAL_WEB_APP.Models.CountyActivity

@{
    Layout = "~/Views/Shared/_PortalLayout.cshtml";
    ViewData["Title"] = "Activity Details";
}

<h2>Activity Details</h2>
<div class="card">
    <div class="card-body">
        <p><strong>Activity Name:</strong> @Model.ActivityName</p>
        <p><strong>Organization:</strong> @Model.Organization</p>
        <p><strong>Location:</strong> @Model.Location</p>
        <p><strong>Start Date:</strong> @Model.StartDate.ToShortDateString()</p>
        <p><strong>End Date:</strong> @Model.EndDate.ToShortDateString()</p>
        <p><strong>Status:</strong> @Model.Status</p>
        <p><strong>Description:</strong> @Model.ActivityDescription</p>
        <p><strong>Actual Beneficiaries:</strong> @Model.ActualBeneficiaries</p>
        <p><strong>Expected Beneficiaries:</strong> @Model.ExpectedBeneficiaries</p>
    </div>
</div>

<div class="mt-3">
    <a href="@Url.Action("Index", "Activities")" class="btn btn-secondary">Close</a>
</div>
